<local:UControl x:Class="User.UI.UImageMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:User.UI"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="160">
    <Grid x:Name="Grid1" Background="Transparent" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border x:Name="BdrBack" Grid.ColumnSpan="2" Background="#99FFFFFF" Visibility="Collapsed"/>
        <Border Margin="5" Background="LightGray"/>
        <Image x:Name="ImageIcon" Margin="5" />
        <Label x:Name="LabelTitle" Grid.Column="1" Foreground="White" Content="标题" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18"/>
        <Border x:Name="Border1" Grid.ColumnSpan="2" BorderThickness="2" BorderBrush="#99FFFFFF" Visibility="Collapsed" Background="Transparent"/>
    </Grid>
</local:UControl>
